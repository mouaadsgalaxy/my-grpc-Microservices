datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  name       String
  email      String   @unique
  password   String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  blogs      Blog[]
}

model Blog {
  id         Int      @id @default(autoincrement())
  name       String
  title      String
  content    String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  user       User     @relation(fields: [author_id], references: [id])
  author_id  Int
}

generator client {
  provider = "prisma-client-js"
}
